= partial 'layouts/head'
%body{class: current_page.data.body_classes || "page"}
  = partial "layouts/old_browser_warning"
  = partial "layouts/header"
  .wrap{:role => "document"}
    .content.row
      = partial "layouts/articles-sidebar-left"
      .main.col-sm-9.col-md-6.col-lg-7
        %h1
          = current_page.data.title
          - if current_page.data.tags
            - current_page.data.tags.each do |tag|
              %small
                %p
                  %i.glyphicon.glyphicon-tag
                  %a{href: tag_path(tag)}= tag
        = yield
      = partial "layouts/sidebar-right"
  = partial "layouts/footer"
  = javascript_include_tag "scripts"
